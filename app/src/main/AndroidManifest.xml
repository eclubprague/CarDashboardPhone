<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.eclubprague.cardashboard.phone">
    <application
        android:name="com.eclubprague.cardashboard.core.application.UpdateApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        >
        <activity
            android:name=".activities.ScreenSlideActivity"
            android:label="@string/title_activity_screen_slide" />
        <activity
            android:name="com.eclubprague.cardashboard.core.preferences.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".activities.ModuleActivity"
            android:label="@string/title_activity_module">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
